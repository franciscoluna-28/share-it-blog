---
import GithubIcon from '@icons/GithubIcon.astro'
import LinkedinIcon from '@icons/LinkedinIcon.astro'
import WebIcon from '@icons/WebIcon.astro'

interface Props {
  name: string
  role: string
  avatar: string
  github?: string
  linkedin?: string
  website?: string
  about: string
  articleCount?: number
}

const { name, role, avatar, github, linkedin, website, about, articleCount } =
  Astro.props
---

<article
  class='bg-gray-800 rounded-lg p-6 flex flex-col items-center text-center'
>
  <img
    src={avatar}
    alt={name}
    class='w-32 h-32 rounded-full mb-4 object-cover'
  />
  <div class='flex flex-col items-center space-y-2 text-center'>
    <h4 class='text-xl font-bold text-white'>{name}</h4>
    <span class='text-sm font-bold text-secondary'>{role}</span>
    <p class='text-sm !text-gray-400 px-6'>
      {about}
    </p>
    {
      articleCount !== undefined && (
        <span class='mt-2 flex items-center gap-2 text-sm text-gray-500'>
          <svg
            class='h-4 w-4'
            viewBox='0 0 24 24'
            fill='none'
            stroke='currentColor'
            stroke-width='2'
          >
            <path d='M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z' />
          </svg>
          {articleCount}{' '}
          {articleCount === 1 ? 'artículo escrito' : 'artículos escritos'}
        </span>
      )
    }
  </div>

  <!-- Social Links -->
  <div class='flex gap-4 mt-4'>
    {
      github && (
        <a
          href={github}
          target='_blank'
          rel='noopener noreferrer'
          class='text-gray-400 hover:text-secondary'
          aria-label='GitHub profile'
        >
          {' '}
          <GithubIcon />{' '}
        </a>
      )
    }
    {
      linkedin && (
        <a
          href={linkedin}
          target='_blank'
          rel='noopener noreferrer'
          class='text-gray-400 hover:text-secondary'
          aria-label='LinkedIn profile'
        >
          {' '}
          <LinkedinIcon />{' '}
        </a>
      )
    }
    {
      website && (
        <a
          href={website}
          target='_blank'
          rel='noopener noreferrer'
          class='text-gray-400 hover:text-secondary'
          aria-label='Personal website'
        >
          {' '}
          <WebIcon />{' '}
        </a>
      )
    }
  </div>
</article>
